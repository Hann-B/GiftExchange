@model IEnumerable<TIY_GiftExchange.Models.Gift>

@{
    ViewBag.Title = "Unopened";
}

<h2>Unopened</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>What's Inside?</p>
        </th>
        <th>
            <p>Hint</p>
        </th>
        <th>
            <p>Color</p>
        </th>
        <th>
            <p>Demensions</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!item.IsOpened.GetValueOrDefault())
                {
                    <h5>UNOPENED!! </h5>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Contents)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiftHint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorWrappingPaper)
            </td>
            <td>
                @item.Height x @item.Width x @item.Depth
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.ActionLink("Open", "Open", new { id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
